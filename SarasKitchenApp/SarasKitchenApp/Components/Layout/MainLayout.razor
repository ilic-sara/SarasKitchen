@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<div class="wrapper">
     @if (isAdminPage)
    {
        <NavMenuAdmin />
    }
    else
    {
        <NavMenu />
    }
    <main class="">
        @Body
    </main>
    <footer class="border-top footer gray-background text-white p-4 mt-2 fw-bold">
        <div class="container text-center">
            &copy; 2025 - Sara's kitchen
            <br />
            Images from unsplash.com
        </div>
    </footer>
</div>

@code {
    private bool isAdminPage => NavigationManager.Uri.Contains("/admin") 
                            && !NavigationManager.Uri.Contains("/log-in") 
                            && !NavigationManager.Uri.Contains("/sign-up");

}